@model ServiceCategoryViewModel
@{
    ViewData["Title"] = "Home Page";
    var services = Model.Services;
    var categories = Model.Categories;
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="list-group">
                    <a asp-action="Index" asp-controller="Services" asp-route-id="" class="list-group-item list-group-item-action active" aria-current="true">
                        Kategoriler
                    </a>
                    @foreach(var item in categories)
                    {
                       <a asp-action="Index" asp-controller="Services" asp-route-id="@item.CategoryID" class="list-group-item list-group-item-action">@item.Name</a>
                    }
                    
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">

                @foreach (var item in services)
                {    
                    <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4 d-flex m-auto">
                                <img src="~/images/@item.ImageUrl" class="img-fluid rounded-start p-4" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <p class="card-text">@item.Description</p>
                                        <p class="card-text">Duration: @item.Duration</p>
                                        <p class="card-text">Category: @item.Category.Name</p>
                                        <p class="card-text"><small class="text-body-secondary">Price: @item.Price $</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>


</body>
