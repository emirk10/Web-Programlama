@model List<Barber>
@{
    ViewData["Title"] = "Home Page";
}

<section class="container my-5">
    <h3>Workplace Contact Information</h3>
    <div class="border rounded d-flex row my-5">
        <div class="col-md-4 text-center">
            <img src="~/images/BarberSaloon.png" class="img-fluid rounded" style="width: 15rem;" alt="Barber Saloon">
        </div>
        <div class="col-md-8 p-4">
            <br />
            <p><strong>Address:</strong> Republic Avenue, Yenikent District, Building No: 18, Adapazarı, Sakarya, Turkey</p>
            <p><strong>Phone Number:</strong> +(90) 264 999 9999</p>
            <p><strong>Email Address:</strong> barberweb@mail.com</p>
        </div>
    </div>
</section>

<section class="container my-5">
    <h3>Location</h3>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.887655330044!2d30.32385370762463!3d40.742497503593185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccaded70ee240b%3A0xd81085b5551312fd!2sBilgisayar%20Ve%20Bili%C5%9Fim%20Bilimleri%20Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1734430475068!5m2!1str!2str"
            width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>

<section class="container my-5">
    <h3>Contact with Our Barbers</h3>

    @foreach (var item in Model)
    {
        <div class="border rounded d-flex row my-5">
            <div class="col-md-4 text-center">
                <img src="~/images/@item.ImageUrl" class="img-fluid rounded" style="width: 15rem;" alt="@item.Name">
            </div>
            <div class="col-md-8 p-4">
                <h5><strong>Name:</strong> @item.Name @item.Surname</h5>
                <br />
                <br />
                <p><strong>Specialization:</strong> @item.Specialization</p>
                <p><strong>Rating:</strong> @item.Rating</p>
                <p><strong>Contact Number:</strong> @item.PhoneNumber</p>
            </div>
        </div>
    }
</section>