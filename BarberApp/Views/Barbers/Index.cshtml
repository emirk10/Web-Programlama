@model List<Barber>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<body>
    <h1 class="my-3 text-center">Our Barbers</h1>
    <section class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="card col-md-3 p-0 m-3 d-flex flex-column align-items-center" style="width: 18rem;">
                    <div class="mb-auto">
                        <a><img src="~/images/@item.ImageUrl" class="card-img-top img-thumbnail" alt="@item.Name" style="height: 14rem; object-fit: cover;"></a>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text fs-4 fw-bold">@item.Name @item.Surname</p>
                        <hr>
                        <ul class="list-unstyled text-start">
                            <li>
                                <strong>Specialization:</strong> @item.Specialization
                            </li>
                            <li>
                                <strong>Phone number:</strong> @item.PhoneNumber
                            </li>
                            <li>
                                <strong>Rating:</strong> @item.Rating
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </section>
    <hr>
</body>
